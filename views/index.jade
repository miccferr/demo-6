    body
        // Primary Page Layout
        // ––––––––––––––––––––––––––––––––––––––––––––––––––
        .container
            section.header
                h1 OSM Inspektor
                p OpenStreetMap statistics & Data Visualization tool
                p v. 0.0.2
            .navbar
                .container
                    ul.navbar-list
                        each index,val in {'#row-data':'Get some data','#row-d3':'Visualize them','#row-report':'Export a report'}
                            li.navbar-item
                                a.navbar-link(href=val )= index
            #row-data.row.row-tabs
                .twelve.column(style='margin-top: 10%')
                    h4 Data Retrieval
                    form(id="query-osm", action="/keyValueData", method="post")
                        input(type="hidden", name="SWlat", id="SWlat")
                        input(type="hidden", name="SWlng", id="SWlng")
                        input(type="hidden", name="NElat", id="NElat")
                        input(type="hidden", name="NElng", id="NElng")
                        div
                            div.input
                                span.label Key
                                input(type="text", name="key")
                            div.input
                                span.label Value
                                input(type="text", name="value")                    
                                
                        div.actions
                            input(type="button", value="Get Key-Value Data").btn.btn-warning.keyValueData
            .row
                .twelve.column
                    p.button.allData Fetch All Data within Bbox
                    //- cancella p-button display block
            .row
                .twelve.column
                    p.button.test TEST
            .row
                .twelve.column
                    button.test TESTACCIADICAZZO
            .row
                #map(style='height: 500px;')
                .graphs
